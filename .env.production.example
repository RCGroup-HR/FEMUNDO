# ============================================================
# CONFIGURACIÓN DE PRODUCCIÓN - FEMUNDO CMS
# Copia este archivo como .env en el VPS y rellena los valores
# NUNCA subas el .env real a git
# ============================================================

# Database
# IMPORTANTE: en producción usa un usuario específico (NO root)
# Crea el usuario así en MySQL:
#   CREATE USER 'femundo_user'@'localhost' IDENTIFIED BY 'TU_PASSWORD_FUERTE';
#   GRANT SELECT, INSERT, UPDATE, DELETE ON femundo_cms.* TO 'femundo_user'@'localhost';
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=femundo_user
DB_PASSWORD=CAMBIA_ESTO_POR_PASSWORD_SEGURO
DB_NAME=femundo_cms
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Auth
# Genera con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERA_UN_SECRET_NUEVO_PARA_PRODUCCION
JWT_EXPIRES_IN=8h

# App
APP_URL=https://femundo.org
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=10485760

# Bcrypt
BCRYPT_SALT_ROUNDS=13

# Stripe (si aplica)
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...
