---
interface Props {
	date: Date;
}

const { date } = Astro.props;
const safeDate = date instanceof Date ? date : date ? new Date(date) : null;
---

{safeDate && (
	<time datetime={safeDate.toISOString()}>
		{
			safeDate.toLocaleDateString('en-us', {
				year: 'numeric',
				month: 'short',
				day: 'numeric',
			})
		}
	</time>
)}
