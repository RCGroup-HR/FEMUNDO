---
export const prerender = false;

import MainLayout from '../layouts/MainLayout.astro';
import { query } from '../db/connection';

interface RegulationSection {
  id: number;
  section_key: string;
  title_es: string;
  title_en: string;
  content_es: string;
  content_en: string;
  icon: string;
  section_type: 'article' | 'card_system' | 'commission' | 'final';
  display_order: number;
  is_active: boolean;
}

let sections: RegulationSection[] = [];
let dbError = false;

try {
  // Ensure table exists (same auto-create pattern as the API)
  try {
    await query('SELECT 1 FROM regulation_sections LIMIT 1');
  } catch {
    // Table doesn't exist yet — the API GET will auto-create it.
    // Trigger a self-fetch to create the table and seed data.
    // Fallback: just leave sections empty, and the page will show a message.
  }

  const rows = await query<RegulationSection>(
    'SELECT * FROM regulation_sections WHERE is_active = TRUE ORDER BY display_order ASC'
  );
  sections = rows || [];
} catch (err) {
  console.error('Error loading regulation sections:', err);
  dbError = true;
}

// Build navigation items from active sections
const navItems = sections.map(s => ({
  key: s.section_key,
  label_es: s.title_es?.replace(/^Art[ií]culo?\s*\d+:\s*/i, '') || s.section_key,
  label_en: s.title_en?.replace(/^Article\s*\d+:\s*/i, '') || s.section_key,
}));
---

<MainLayout title="Reglamento Oficial - FEMUNDO 2025" description="Reglamento oficial de competencia de la Federación Mundial de Dominó (FEMUNDO) 2025.">
  <Fragment slot="head">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* HERO RESPONSIVE */
        .hero-reglamento {
            background: var(--gradient);
            color: white;
            padding: 60px 20px;
            text-align: center;
            min-height: 50vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-content h1 {
            font-size: clamp(1.8rem, 5vw, 3.5rem);
            font-weight: 700;
            margin-bottom: 1rem;
            line-height: 1.2;
            color: white;
        }

        .hero-content p {
            font-size: clamp(1rem, 2.5vw, 1.3rem);
            margin-bottom: 2rem;
            opacity: 0.95;
        }

        /* NAVEGACIÓN RESPONSIVE */
        .nav-quick {
            background: white;
            box-shadow: 0 2px 10px rgba(30, 58, 138, 0.1);
            padding: 10px 15px;
            position: sticky;
            top: 60px;
            z-index: 90;
            overflow-x: auto;
            white-space: nowrap;
            -webkit-overflow-scrolling: touch;
        }

        .nav-quick-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            min-width: max-content;
        }

        .nav-quick a {
            color: var(--primary);
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 20px;
            transition: all 0.3s;
            font-weight: 500;
            font-size: clamp(0.85rem, 2vw, 1rem);
            white-space: nowrap;
            flex-shrink: 0;
        }

        .nav-quick a:hover,
        .nav-quick a.active {
            background: var(--primary);
            color: white;
        }

        /* CONTAINER RESPONSIVE */
        .reglamento-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px 15px;
        }

        /* CARDS RESPONSIVE */
        .articulo-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(30, 58, 138, 0.1);
            margin-bottom: 25px;
            padding: clamp(20px, 4vw, 30px);
            transition: transform 0.3s;
            border-left: 4px solid var(--secondary);
        }

        .articulo-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(30, 58, 138, 0.15);
        }

        .articulo-numero {
            background: var(--primary);
            color: white;
            width: clamp(35px, 6vw, 40px);
            height: clamp(35px, 6vw, 40px);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            margin-right: 10px;
            font-size: clamp(0.9rem, 2vw, 1rem);
            flex-shrink: 0;
        }

        .articulo-titulo {
            color: var(--primary-dark);
            font-family: 'Raleway', sans-serif;
            font-weight: 700;
            font-size: clamp(1.1rem, 3vw, 1.4rem);
            margin-bottom: 20px;
            display: flex;
            align-items: flex-start;
            gap: 10px;
            line-height: 1.3;
        }

        .articulo-titulo span {
            margin-top: 2px;
        }

        /* TEXTO RESPONSIVE */
        .articulo-card p,
        .articulo-card li {
            font-size: clamp(0.9rem, 2vw, 1rem);
            line-height: 1.6;
            margin-bottom: 1rem;
        }

        .articulo-card h4 {
            font-size: clamp(1rem, 2.5vw, 1.2rem);
            margin: 1.5rem 0 0.5rem 0;
            color: var(--primary-dark);
        }

        .articulo-card ul,
        .articulo-card ol {
            padding-left: clamp(20px, 4vw, 30px);
        }

        /* TARJETAS RESPONSIVE */
        .tarjeta-box {
            border-left: 5px solid;
            padding: clamp(15px, 3vw, 20px);
            margin: 20px 0;
            border-radius: 0 10px 10px 0;
            word-wrap: break-word;
        }

        .tarjeta-box h4 {
            font-size: clamp(1rem, 2.5vw, 1.2rem);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .tarjeta-box h4 i {
            font-size: clamp(1rem, 2vw, 1.1rem);
        }

        .tarjeta-amarilla {
            border-color: var(--secondary);
            background: #fff8e1;
        }

        .tarjeta-roja {
            border-color: #ef4444;
            background: #fecaca;
        }

        .tarjeta-negra {
            border-color: var(--primary-dark);
            background: #f1f5f9;
        }

        /* COMISIÓN RESPONSIVE */
        .comision-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }

        .miembro-card-reglamento {
            background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 100%);
            padding: clamp(15px, 3vw, 20px);
            border-radius: 10px;
            text-align: center;
            word-wrap: break-word;
            border: 2px solid var(--secondary);
            transition: transform 0.3s ease;
        }

        .miembro-card-reglamento:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(30, 58, 138, 0.1);
        }

        .miembro-card-reglamento h5 {
            font-size: clamp(0.9rem, 2vw, 1rem);
            margin-bottom: 8px;
            line-height: 1.3;
            color: var(--primary-dark);
        }

        .miembro-card-reglamento p {
            font-size: clamp(0.85rem, 1.8vw, 0.95rem);
            margin: 5px 0;
        }

        /* BOTONES RESPONSIVE */
        .btn-primary-reglamento {
            background: var(--gradient);
            border: none;
            border-radius: 25px;
            padding: clamp(10px, 2vw, 12px) clamp(20px, 4vw, 30px);
            color: white;
            font-weight: 600;
            font-size: clamp(0.9rem, 2vw, 1rem);
            transition: transform 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary-reglamento:hover {
            transform: translateY(-2px);
            color: white;
        }

        /* ALERTS RESPONSIVE */
        .alert-reglamento {
            padding: clamp(12px, 2.5vw, 15px);
            border-radius: 8px;
            margin: 15px 0;
            font-size: clamp(0.85rem, 1.8vw, 0.95rem);
        }

        .alert-info-r {
            background-color: #e0f2fe;
            border: 1px solid var(--primary-light);
            color: var(--primary-dark);
        }

        .alert-danger-r {
            background-color: #ffebee;
            border: 1px solid #ffcdd2;
            color: #b71c1c;
        }

        /* SECCIÓN FINAL CON GRADIENTE */
        .final-section {
            background: var(--gradient) !important;
            color: white !important;
            border-left: none !important;
        }

        .final-section h3 {
            color: white !important;
        }

        .final-section .lead {
            opacity: 0.95;
        }

        /* CONTACTOS GRID */
        .contactos-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-top: 15px;
        }

        .contacto-card {
            flex: 1;
            min-width: 200px;
            background: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 8px;
            border: 1px solid rgba(255, 140, 0, 0.3);
            transition: all 0.3s ease;
        }

        .contacto-card:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: var(--secondary);
        }

        .contacto-card a {
            color: var(--secondary);
            text-decoration: none;
            font-weight: 600;
        }

        .contacto-card a:hover {
            color: white;
        }

        /* MEDIA QUERIES ESPECÍFICOS */
        @media (max-width: 768px) {
            .hero-reglamento {
                padding: 40px 15px;
                min-height: 40vh;
            }

            .nav-quick {
                padding: 8px 10px;
            }

            .nav-quick::-webkit-scrollbar {
                height: 4px;
            }

            .nav-quick::-webkit-scrollbar-track {
                background: #f1f1f1;
            }

            .nav-quick::-webkit-scrollbar-thumb {
                background: var(--primary);
                border-radius: 2px;
            }

            .reglamento-container {
                padding: 15px 10px;
            }

            .articulo-titulo {
                flex-direction: column;
                align-items: flex-start;
            }

            .articulo-numero {
                margin-bottom: 5px;
            }

            .comision-grid {
                grid-template-columns: 1fr;
                gap: 12px;
            }

            .tarjeta-box {
                margin: 15px 0;
            }
        }

        @media (max-width: 480px) {
            .hero-reglamento {
                padding: 30px 10px;
            }

            .reglamento-container {
                padding: 10px 8px;
            }

            .articulo-card {
                margin-bottom: 20px;
                border-radius: 10px;
            }

            .nav-quick a {
                padding: 6px 12px;
                font-size: 0.85rem;
            }
        }

        @media (max-width: 360px) {
            .hero-content h1 {
                font-size: 1.5rem;
            }

            .articulo-card {
                padding: 15px;
            }

            .tarjeta-box {
                padding: 12px;
            }
        }

        /* MEJORAS DE ACCESIBILIDAD */
        @media (prefers-reduced-motion: reduce) {
            .articulo-card:hover {
                transform: none;
            }
        }

        /* SCROLL SUAVE */
        html {
            scroll-behavior: smooth;
        }

        .nav-quick a:focus {
            outline: 2px solid var(--secondary);
            outline-offset: 2px;
        }
    </style>
  </Fragment>

    <!-- Hero Section -->
    <section class="hero-reglamento">
        <div class="hero-content">
            <h1 data-es="REGLAMENTO DE COMPETENCIA FEMUNDO 2025" data-en="FEMUNDO 2025 COMPETITION REGULATIONS">REGLAMENTO DE COMPETENCIA FEMUNDO 2025</h1>
            <p data-es="Normativas oficiales para las competencias internacionales de dominó" data-en="Official regulations for international domino competitions">Normativas oficiales para las competencias internacionales de dominó</p>
            <a href="#contenido" class="btn btn-light btn-lg" data-es="Ver Reglamento Completo" data-en="View Complete Regulations">Ver Reglamento Completo</a>
        </div>
    </section>

    <!-- Navegación rápida (dynamic) -->
    {navItems.length > 0 && (
      <div class="nav-quick">
          <div class="nav-quick-container">
              {navItems.map(item => (
                  <a href={`#${item.key}`} data-es={item.label_es} data-en={item.label_en}>{item.label_es}</a>
              ))}
          </div>
      </div>
    )}

    <!-- Contenido del Reglamento -->
    <div id="contenido" class="reglamento-container">

      {dbError && (
        <div class="articulo-card" style="text-align:center; padding: 3rem;">
          <i class="fas fa-exclamation-triangle" style="font-size: 2rem; color: #f59e0b; margin-bottom: 1rem; display: block;"></i>
          <p data-es="No se pudo cargar el reglamento. Intente nuevamente más tarde." data-en="Could not load the regulations. Please try again later.">
            No se pudo cargar el reglamento. Intente nuevamente más tarde.
          </p>
        </div>
      )}

      {!dbError && sections.length === 0 && (
        <div class="articulo-card" style="text-align:center; padding: 3rem;">
          <i class="fas fa-info-circle" style="font-size: 2rem; color: #3b82f6; margin-bottom: 1rem; display: block;"></i>
          <p data-es="El reglamento se está preparando. Vuelva pronto." data-en="The regulations are being prepared. Come back soon.">
            El reglamento se está preparando. Vuelva pronto.
          </p>
        </div>
      )}

      {sections.map((section) => {
        if (section.section_type === 'final') {
          return (
            <div id={section.section_key} class="articulo-card text-center final-section">
              <h3 data-es={section.title_es} data-en={section.title_en}>{section.title_es}</h3>
              <div class="content-es" data-es-block>
                <Fragment set:html={section.content_es} />
              </div>
              <div class="content-en" data-en-block style="display:none;">
                <Fragment set:html={section.content_en} />
              </div>
              <a href="/documents/reglamento-femundo-2025.pdf" id="downloadBtn" download="Reglamento-FEMUNDO-2025.pdf" class="btn btn-light btn-lg mt-3" style="display: inline-flex; align-items: center; gap: 8px; text-decoration: none;">
                <i class="fas fa-download"></i>
                <span data-es="Descargar Reglamento PDF" data-en="Download Regulations PDF">Descargar Reglamento PDF</span>
              </a>
            </div>
          );
        }

        // For article, card_system, commission types: render as card
        const iconContent = section.icon && section.icon.startsWith('fa-')
          ? `<i class="fas ${section.icon}"></i>`
          : (section.icon || String(section.display_order));

        return (
          <div id={section.section_key} class="articulo-card">
            <h2 class="articulo-titulo">
              <span class="articulo-numero" set:html={iconContent} />
              <span data-es={section.title_es} data-en={section.title_en}>{section.title_es}</span>
            </h2>
            <div class="content-es" data-es-block>
              <Fragment set:html={section.content_es} />
            </div>
            <div class="content-en" data-en-block style="display:none;">
              <Fragment set:html={section.content_en} />
            </div>
          </div>
        );
      })}

    </div>

  <Fragment slot="scripts">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Highlight navegación activa
        function updateActiveNav() {
            const sections = document.querySelectorAll('[id]');
            const navLinks = document.querySelectorAll('.nav-quick a');

            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 120;
                if (window.scrollY >= sectionTop) {
                    current = section.getAttribute('id');
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
        }

        // Throttle scroll events
        let ticking = false;
        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(() => {
                    updateActiveNav();
                    ticking = false;
                });
                ticking = true;
            }
        });

        // Language support for content blocks
        function updateReglamentoLanguage(lang) {
            const esBlocks = document.querySelectorAll('[data-es-block]');
            const enBlocks = document.querySelectorAll('[data-en-block]');

            esBlocks.forEach(el => {
                el.style.display = lang === 'es' ? '' : 'none';
            });
            enBlocks.forEach(el => {
                el.style.display = lang === 'en' ? '' : 'none';
            });
        }

        // Download button language handling
        document.addEventListener('DOMContentLoaded', function() {
            const downloadBtn = document.getElementById('downloadBtn');
            const downloadPaths = {
                es: '/documents/reglamento-femundo-2025.pdf',
                en: '/documents/femundo.pdf'
            };

            // Listen for language changes
            window.addEventListener('languageChanged', function(e) {
                const lang = e.detail.language;
                updateReglamentoLanguage(lang);
                if (downloadBtn) {
                    downloadBtn.href = downloadPaths[lang] || downloadPaths.es;
                    downloadBtn.download = lang === 'en' ? 'FEMUNDO-Regulations-2025-EN.pdf' : 'Reglamento-FEMUNDO-2025-ES.pdf';
                }
            });

            // Set initial state based on saved language
            const savedLang = localStorage.getItem('language') || 'es';
            updateReglamentoLanguage(savedLang);
            if (savedLang === 'en' && downloadBtn) {
                downloadBtn.href = downloadPaths.en;
                downloadBtn.download = 'FEMUNDO-Regulations-2025-EN.pdf';
            }
        });

        // Inicial
        updateActiveNav();
    </script>
  </Fragment>
</MainLayout>
