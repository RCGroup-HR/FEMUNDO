export const prerender = false;

import MainLayout from '../layouts/MainLayout.astro';
import { query, queryOne } from '../db/connection';

// Cargar TODOS los datos desde BD
let hero: any = {};
let carouselSlides: any[] = [];
let allEvents: any[] = [];
let aboutSections: any[] = [];
let stats: any[] = [];
let videoData: any = {};
let contactData: any = {};
let announcements: any[] = [];

try {
  const results = await Promise.all([
    queryOne('SELECT * FROM hero_section WHERE is_active = TRUE LIMIT 1'),
    query('SELECT * FROM carousel_slides WHERE is_active = TRUE ORDER BY display_order ASC'),
    query('SELECT * FROM events ORDER BY display_order ASC, start_date DESC'),
    query('SELECT * FROM about_section WHERE is_active = TRUE ORDER BY display_order ASC'),
    query('SELECT * FROM statistics WHERE is_active = TRUE ORDER BY display_order ASC'),
    queryOne('SELECT * FROM video_section WHERE is_active = TRUE LIMIT 1'),
    queryOne('SELECT * FROM contact_info LIMIT 1'),
    query('SELECT * FROM announcement WHERE is_active = TRUE AND (start_date IS NULL OR start_date <= CURDATE()) AND (end_date IS NULL OR end_date >= CURDATE()) ORDER BY display_order ASC'),
  ]);

  hero = results[0] || {};
  carouselSlides = (results[1] as any[]) || [];
  allEvents = (results[2] as any[]) || [];
  aboutSections = (results[3] as any[]) || [];
  stats = (results[4] as any[]) || [];
  videoData = results[5] || {};
  contactData = results[6] || {};
  announcements = (results[7] as any[]) || [];
} catch (e) {
  console.error('Error loading index data from DB:', e);
}

const upcomingEvents = allEvents.filter((e: any) => e.status === 'upcoming');
const featuredEvents = allEvents.filter((e: any) => e.is_featured && e.status === 'completed');
const miniCarouselSlides = carouselSlides.filter((s: any) => s.carousel_type === 'mini' || s.carousel_type === 'hero');
const announcement = announcements.length > 0 ? announcements[0] : null;

// Extract YouTube video ID from URL
function getYoutubeEmbedUrl(url: string) {
  if (!url) return '';
  if (url.includes('/embed/')) return url;
  const match = url.match(/(?:youtu\.be\/|youtube\.com\/watch\?v=)([^&]+)/);
  return match ? `https://www.youtube.com/embed/${match[1]}` : url;
}

const videoEmbedUrl = videoData.video_url ? getYoutubeEmbedUrl(videoData.video_url) : 'https://www.youtube.com/embed/IUeIhXcCock';
