      });

      document.getElementById('announcementModal')?.addEventListener('click', function(e) {
        if (e.target === this) this.style.display = 'none';
      });

      // EVENTOS DESTACADOS - REDIRECCIÓN A GALERÍA (dinámico desde data-attributes)
      document.querySelectorAll('.catalog-item:not(.upcoming-event)').forEach(item => {
        item.addEventListener('click', function() {
          const galleryUrl = this.dataset.galleryUrl;
          if (galleryUrl && galleryUrl !== '#') {
            window.location.href = galleryUrl;
          }
        });
      });

      // PRÓXIMOS EVENTOS - INSCRIPCIONES (dinámico desde data-attributes)
      document.querySelectorAll('.upcoming-event[data-event]').forEach(item => {
        item.addEventListener('click', function() {
          const registrationUrl = (this as HTMLElement).dataset.registrationUrl;
          if (registrationUrl) {
            window.location.href = registrationUrl;
          } else {
            const eventKey = (this as HTMLElement).dataset.event;
            window.location.href = `/registro?evento=${eventKey}`;
          }
        });
      });

      // ANIMACIÓN DE NÚMEROS EN ESTADÍSTICAS
      function animateNumbers() {
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
          const finalNumber = stat.textContent;
          const number = parseInt(finalNumber.replace(/\D/g, ''));
          const suffix = finalNumber.replace(/\d/g, '');
          if (number && number < 1000) {
            let currentNumber = 0;
            const increment = Math.max(1, Math.floor(number / 30));
            const timer = setInterval(() => {
              currentNumber += increment;
              if (currentNumber >= number) {
                stat.textContent = finalNumber;
                clearInterval(timer);
              } else {
                stat.textContent = Math.floor(currentNumber) + suffix;
              }
            }, 50);
          }
        });
      }

      if ('IntersectionObserver' in window) {
        const statsObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              animateNumbers();
              statsObserver.unobserve(entry.target);
            }
          });
        });
        const statsSection = document.querySelector('.stats-section');
        if (statsSection) statsObserver.observe(statsSection);
      }

      // YOUTUBE AUTOPLAY
      class YouTubeAutoplay {
        constructor() {
          this.video = document.getElementById('youtubeVideo');
          this.container = document.getElementById('youtubeContainer');
          this.overlay = document.getElementById('videoOverlay');
          this.isPlaying = false;
          this.hasStarted = false;
          this.observer = null;
          this.init();
        }

        init() {
          this.isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
          if (this.isMobile) {
            this.setupMobilePlayback();
          } else {
            this.setupDesktopAutoplay();
          }
          this.setupIntersectionObserver();
        }

        setupMobilePlayback() {
          this.overlay.style.display = 'flex';
          this.overlay.addEventListener('click', () => {
            this.startVideo();
            this.overlay.style.display = 'none';
          });
        }

        setupDesktopAutoplay() {
          this.video.src = this.video.src.replace('mute=1', 'mute=1&autoplay=1');
        }

        setupIntersectionObserver() {
          const options = { root: null, rootMargin: '0px', threshold: 0.5 };
          this.observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting && !this.hasStarted) {
                this.handleVideoInView();
              }
            });
          }, options);
          this.observer.observe(this.container);
        }

        handleVideoInView() {
          if (!this.isMobile && !this.hasStarted) {
            this.startVideo();
          }
        }

        startVideo() {
          if (this.hasStarted) return;
          this.hasStarted = true;
          this.isPlaying = true;
          if (!this.video.src.includes('autoplay=1')) {
            this.video.src = this.video.src.replace('enablejsapi=1', 'enablejsapi=1&autoplay=1');
          }
        }

        destroy() {
          if (this.observer) this.observer.disconnect();
        }
      }

      document.addEventListener('DOMContentLoaded', function() {
        setTimeout(() => {
          const youtubeAutoplay = new YouTubeAutoplay();
          window.addEventListener('beforeunload', () => youtubeAutoplay.destroy());
        }, 1000);
      });

      // FALLBACK: Activar video al hacer scroll
      let videoActivated = false;
      window.addEventListener('scroll', function() {
        if (videoActivated) return;
        const videoSection = document.querySelector('.video-section');
        if (!videoSection) return;
        const rect = videoSection.getBoundingClientRect();
        const isVisible = rect.top < window.innerHeight && rect.bottom > 0;
        if (isVisible && !videoActivated) {
          videoActivated = true;
          const video = document.getElementById('youtubeVideo');
          if (video && !video.src.includes('autoplay=1')) {
            video.src = video.src.replace('mute=1', 'mute=1&autoplay=1');
          }
        }
      });

      // MINI CAROUSEL
      document.addEventListener('DOMContentLoaded', function() {
        const miniCarousel = {
          track: document.getElementById('miniCarouselTrack'),
          slides: document.querySelectorAll('.mini-carousel-slide'),
          prevBtn: document.getElementById('miniPrevBtn'),
          nextBtn: document.getElementById('miniNextBtn'),
          indicators: document.querySelectorAll('.mini-indicator'),
          currentSlide: 0,

          init() {
            if (!this.track || !this.slides.length) return;
            this.prevBtn?.addEventListener('click', () => this.prevSlide());
            this.nextBtn?.addEventListener('click', () => this.nextSlide());
            this.indicators.forEach((indicator, index) => {
              indicator.addEventListener('click', () => this.goToSlide(index));
            });
            this.startAutoPlay();
            const container = document.getElementById('miniCarousel');
            container?.addEventListener('mouseenter', () => this.stopAutoPlay());
            container?.addEventListener('mouseleave', () => this.startAutoPlay());
          },

          updateCarousel() {
            const translateX = -this.currentSlide * 100;
            this.track.style.transform = `translateX(${translateX}%)`;
            this.slides.forEach((slide, index) => {
              slide.classList.toggle('active', index === this.currentSlide);
            });
            this.indicators.forEach((indicator, index) => {
              indicator.classList.toggle('active', index === this.currentSlide);
            });
          },

          nextSlide() {
            this.currentSlide = (this.currentSlide + 1) % this.slides.length;
            this.updateCarousel();
          },

          prevSlide() {
            this.currentSlide = this.currentSlide === 0 ? this.slides.length - 1 : this.currentSlide - 1;
            this.updateCarousel();
          },

          goToSlide(index) {
            this.currentSlide = index;
            this.updateCarousel();
          },

          startAutoPlay() {
            this.stopAutoPlay();
            this.autoPlayInterval = setInterval(() => this.nextSlide(), 4000);
          },

          stopAutoPlay() {
            if (this.autoPlayInterval) {
              clearInterval(this.autoPlayInterval);
              this.autoPlayInterval = null;
            }
          }
        };

        setTimeout(() => miniCarousel.init(), 800);
        window.addEventListener('beforeunload', () => miniCarousel.stopAutoPlay());
      });

      // IMAGE MODAL CON NAVEGACIÓN
      document.addEventListener('DOMContentLoaded', function() {
        const imageModal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        const closeModal = document.getElementById('closeImageModal');
        const modalPrevBtn = document.getElementById('modalPrevBtn');
        const modalNextBtn = document.getElementById('modalNextBtn');

        let currentModalIndex = 0;
        let carouselImages = [];

        function getCarouselImages() {
          const slides = document.querySelectorAll('.mini-carousel-slide');
          carouselImages = [];
          slides.forEach((slide) => {
            const img = slide.querySelector('.mini-flyer-card img');
            if (img) {
              carouselImages.push({ src: img.src, alt: img.alt || '' });
            }
          });
          return carouselImages;
        }

        function updateModal() {
          if (!carouselImages.length) return;
          const currentImage = carouselImages[currentModalIndex];
          modalImage.src = currentImage.src;
          modalImage.alt = currentImage.alt;
          modalImage.style.transform = 'scale(0.95)';
          setTimeout(() => { modalImage.style.transform = 'scale(1)'; }, 150);
        }

        function openModal(index = 0) {
          getCarouselImages();
          currentModalIndex = index;
          updateModal();
          imageModal.style.display = 'flex';
          document.body.style.overflow = 'hidden';
        }

        function closeImageModal() {
          imageModal.style.display = 'none';
          document.body.style.overflow = 'auto';
        }

        function nextImage() {
          currentModalIndex = (currentModalIndex + 1) % carouselImages.length;
          updateModal();
        }

        function prevImage() {
          currentModalIndex = currentModalIndex === 0 ? carouselImages.length - 1 : currentModalIndex - 1;
          updateModal();
        }

        document.querySelectorAll('.mini-flyer-card img').forEach((img, index) => {
          img.addEventListener('click', function(e) {
            e.stopPropagation();
            openModal(index);
          });
        });

        closeModal?.addEventListener('click', closeImageModal);
        modalPrevBtn?.addEventListener('click', prevImage);
        modalNextBtn?.addEventListener('click', nextImage);

        imageModal?.addEventListener('click', function(e) {
          if (e.target === this) closeImageModal();
        });

        document.addEventListener('keydown', function(e) {
          if (imageModal.style.display === 'flex') {
            switch(e.key) {
              case 'Escape': closeImageModal(); break;
              case 'ArrowLeft': prevImage(); break;
              case 'ArrowRight': nextImage(); break;
            }
          }
        });
      });
    </script>
